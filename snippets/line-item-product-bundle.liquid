<div
  class="cart__items"
  data-itemdata-animation="{{ animation_name }}"
  data-animation-duration="500"
  data-animation-delay="{{ animation_delay }}"
  {%- assign animation_delay = animation_delay | plus: animation_delay_increment -%}>
  <div class="cart-item__image">
    <a href="{{ line_item.url }}" aria-label="{{ line_item.title | escape }}">
      <img class="lazyload" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="{{- line_item.product.featured_media.preview_image | img_url: '180x' -}}" alt="{{- line_item.title | strip_html | escape -}}" data-aspectratio="{{- line_item.product.featured_media.preview_image.aspect_ratio -}}"
        data-sizes="auto">
        <noscript>
          <img src="{{- line_item | img_url: '180x' -}}" alt="{{- line_item.title | escape -}}">
        </noscript>
    </a>
  </div>
  <div class="cart-item__content">
    <div class="cart-item__content-inner">
      <h4 class="cart-item__title">
        <a href="{{ line_item.url }}">
          {{- line_item.product.title | strip_html -}}
        </a>
      </h4>
      <div class="cart-item__meta">
        {%- unless line_item.product.has_only_default_variant -%}
          {%- for option in line_item.options -%}
            <p class="cart__item__selected-options">
              <span>{{ line_item.product.options[forloop.index0] }}:</span>

              <span>{{ option }}</span>
            </p>
          {%- endfor -%}
        {%- endunless -%}

      </div>
      <p class="short_description">
        {{ description }}
      </p>
    </div>
  </div>
</div>
